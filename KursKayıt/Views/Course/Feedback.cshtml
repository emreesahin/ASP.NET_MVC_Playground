@model Candidate

<div>
    <h3 class="display-4">Congrats @Model.FullName</h3>
    <p class="lead">Your application has been <mark>accepted</mark></p>
    <p class="lead">Thanks for your interest</p>
    <hr />
    <blockquote class="blocquote">
        You have enrolled to @Model.SelectedCourse course.
    </blockquote>
    <p class="text-muted">You Applied at @Model.ApplyAt </p>
    <div class="btn-group">
        <a class="btn btn-outline-success" asp-action="Index">Application</a>
        <a class="btn btn-outline-success" asp-action="Index" asp-controller="Home">Home</a>
    </div>
</div>